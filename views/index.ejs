<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <title>Gestione lista della spesa - HOME</title>
</head>

<body>
    <div class="main-container">

        <div class="heading">
            <h1>Le tue spese:</h1>
        </div>

        <div class="add-form">
            <form action="/add-expense" method="post">
                <div class="column">
                    <input type="text" name="product" class="form-inputs" placeholder="Prodotto" required>
                </div>

                <div class="column">
                    <input type="text" name="descr" class="form-inputs" placeholder="Descrizione" required>
                </div>

                <div class="column">
                    <input type="number" step="0.01" min="0" name="amount" class="form-inputs" placeholder="Importo" required>
                </div>

                <div class="column">
                    <button type="submit" class="buttons">Aggiungi</button>
                </div>
            </form>
        </div>

        <div class="toggle-paid-form">
            <% list.forEach(item=> { %>
                <form action="/toggle-paid" method="post">
                    <div class="column">
                        <strong><%=item.product%></strong>
                    </div>

                    <div class="column">
                        <p><%=item.descr%></p>
                    </div>
                    
                    <div class="column">
                        <p><%=item.amount%></p>
                    </div>

                    <input type="hidden" value="<%=item.id%>" name="id">
                    <button type="submit" class="<%=item.paid?'paid':'not-paid'%>">Pagamento</button>
                </form>
                <% }) %>
        </div>

        <div class="remove-paid-form">
            <form action="remove-paid" method="post">
                <button type="submit">Elimina le spese pagate</button>
            </form>
        </div>
    </div>
</body>

</html>